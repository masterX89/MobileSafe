<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:hrbeu="http://schemas.android.com/apk/res/com.hrbeu.mobilesafe"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		style="@style/TitleStyle"
		android:text="设置中心"/>

	<com.hrbeu.mobilesafe.view.SettingItemView
		android:id="@+id/siv_update"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		hrbeu:desc_off="自动更新已关闭"
		hrbeu:desc_on="自动更新已开启"
		hrbeu:title="自动更新设置"/>

	<com.hrbeu.mobilesafe.view.SettingItemView
		android:id="@+id/siv_address"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		hrbeu:desc_off="归属地显示已关闭"
		hrbeu:desc_on="归属地显示已开启"
		hrbeu:title="电话归属地显示设置"/>

	<com.hrbeu.mobilesafe.view.SettingClickView
		android:id="@+id/scv_address_style"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<com.hrbeu.mobilesafe.view.SettingClickView
		android:id="@+id/scv_address_location"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<com.hrbeu.mobilesafe.view.SettingItemView
		android:id="@+id/siv_callsafe"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		hrbeu:desc_off="黑名单已关闭"
		hrbeu:desc_on="黑名单已开启"
		hrbeu:title="黑名单设置"/>

</LinearLayout>